<body>
  <h3>Choisissez une √©tape :</h3>
  <select id="step">
    <option value="">-- S√©lectionnez --</option>
    <option value="contact">Prise de contact</option>
    <option value="relance">Relance</option>
    <option value="merci">Remerciement</option>
  </select>

  <div id="message"></div>

  <script>
    const step = document.getElementById("step");
    const message = document.getElementById("message");

    step.addEventListener("change", () => {
      if (step.value === "contact") {
        message.textContent = "Bonjour, je me permets de vous √©crire pour...";
      } else if (step.value === "relance") {
        message.textContent = "Je me permets de revenir vers vous concernant...";
      } else if (step.value === "merci") {
        message.textContent = "Merci beaucoup pour votre retour üôè";
      } else {
        message.textContent = "";
      }
    });
  </script>
